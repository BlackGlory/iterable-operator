{
  "compilerOptions": {
    "target": "ES2019"
  , "module": "CommonJS"
  , "strict": true
  , "noUnusedLocals": true
  , "noUnusedParameters": true
  , "baseUrl": "."
  , "paths": {
      "@input/*": ["src/input/*"]
    , "@middleware/*": ["src/middleware/*"]
    , "@output/*": ["src/output/*"]
    , "@style/*": ["src/style/*"]
    , "@src/*": ["src/*"]
    , "@test/*": ["__tests__/*"]
    }
  }
}
