{
  "compilerOptions": {
    "target": "ES2019"
  , "module": "CommonJS"
  , "strict": true
  , "noUnusedLocals": true
  , "noUnusedParameters": true
  , "baseUrl": "."
  , "paths": {
      "@src/*": ["src/*"]
    , "@intermediate/*": ["src/intermediate/*"]
    , "@terminal/*": ["src/terminal/*"]
    , "@test/*": ["__tests__/*"]
    }
  }
}
